<html>
  <head>
    <link href="//cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/application.css" rel="stylesheet">
    <title>Tuakiri Rapid Connect</title>
  </head>
  <body>
    <header>
      <div class="container">
        <div class="row">
          <div class="span12">
            <img alt="Logo" height="82" src="/logo.jpg" width="234" />
            <h1>Rapid Connect</h1>
          </div>
        </div>
      </div>
    </header>

    <section class="content">
      <div class="container">

        <% flash_types.select{ |kind| flash.has?(kind) }.each do |kind| %>
          <div class="alert alert-<%= kind %>">
            <%= flash[kind] %>
          </div>
        <% end %>

        <%== yield %>

      </div>
    </section>

    <footer>
      <div class="container">
        <p>
          Tuakiri Rapid Connect <strong>version <%= current_version %></strong>
          <% if session[:subject] && session[:subject][:principal] && session[:subject][:cn] %>
            <br>
            Logged in as <em><%= session[:subject][:cn] %></em> ( <%=session[:subject][:principal]%> )
          <% end %>
          <br>

          Developed by the <a href="https://aaf.edu.au">Australian Access Federation</a>
        </p>
      </div>
    </footer>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.11.1/jquery.validate.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js"></script>
    <script src="/bootbox.min.js"></script>
    <script src="/application.js"></script>

  </body>
</html>
